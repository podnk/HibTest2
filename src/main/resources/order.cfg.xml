<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bean.Order" table="orders">
        <id column="id" name="id" type="java.lang.Integer">
        	<generator class="increment"></generator>
        </id>
        <property column="count" name="orderCount" type="java.lang.Integer" />
        <property column="price" name="price" type="java.math.BigDecimal" />
        <property column="status" name="status" type="java.lang.Boolean" />
    </class>
</hibernate-mapping>